                <ControlTemplate TargetType="ListBoxItem">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="FocusedOn">
                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                             Storyboard.TargetProperty="ScaleX"
                                             From="1" To="1.50" Duration="0:0:0" AccelerationRatio="0.3" DecelerationRatio="0.3"/>
                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                             Storyboard.TargetProperty="ScaleY"
                                             From="1" To="1.50" Duration="0:0:0" AccelerationRatio="0.3" DecelerationRatio="0.3"/>
                        </Storyboard>
                        <Storyboard x:Key="FocusedOff">
                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                             Storyboard.TargetProperty="ScaleX"
                                             From="1.50" To="1" Duration="0:0:0" AccelerationRatio="0.3" DecelerationRatio="0.3"/>
                            <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                             Storyboard.TargetProperty="ScaleY"
                                             From="1.50" To="1" Duration="0:0:0" AccelerationRatio="0.3" DecelerationRatio="0.3"/>
                        </Storyboard>
                        <Storyboard x:Key="BorderShimmerAnim" RepeatBehavior="Forever">
                            <ColorAnimation From="#00000000" To="#33FFFFFF" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" Storyboard.TargetName="BorderShimmer" BeginTime="0:0:0" Duration="0:0:01.50" AutoReverse="True">
                                <ColorAnimation.EasingFunction>
                                    <ExponentialEase EasingMode="EaseInOut" />
                                </ColorAnimation.EasingFunction>
                            </ColorAnimation>
                            <ColorAnimation From="#00000000" To="#00000000" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" Storyboard.TargetName="BorderShimmer" BeginTime="0:0:03" Duration="0:0:06">
                                <ColorAnimation.EasingFunction>
                                    <ExponentialEase EasingMode="EaseInOut" />
                                </ColorAnimation.EasingFunction>
                            </ColorAnimation>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid Margin="10"
                          RenderTransformOrigin="0,0.5" VerticalAlignment="Top"
                          d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}">
