<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type FiltersAdditional}">
        <Setter Property="Template">
            <Setter.Value>
               
                <ControlTemplate TargetType="{x:Type FiltersAdditional}">
                    <Border CornerRadius="5" Background="{DynamicResource OverlayMenuBackgroundBrush}" BorderThickness="12" HorizontalAlignment="Left">

                        <DockPanel Background="{DynamicResource OverlayMenuBackgroundBrush}"
                                MinWidth="400"
                                x:Name="PART_MenuHost" HorizontalAlignment="Left">
                            <ButtonEx BorderThickness="2" DockPanel.Dock="Top"
                                  Margin="15,5,15,5"
                                  x:Name="PART_ButtonBack">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xeab5;" FontFamily="{StaticResource FontIcoFont}"
                                            FontSize="20" VerticalAlignment="Center"
                                            Margin="0,0,10,0" />
                                        <TextBlock Text="{DynamicResource LOCBackLabel}"
                                            VerticalAlignment="Center"
                                            Style="{DynamicResource TextBlockBaseStyle}"/>
                                    </StackPanel>
                                </Button.Content>
                            </ButtonEx>
                            <ItemsControlEx x:Name="PART_ItemsHost"
                                        DockPanel.Dock="Top" Focusable="False"
                                        KeyboardNavigation.DirectionalNavigation="Once" />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
                    
            </Setter.Value>
            
        </Setter>
    </Style>
</ResourceDictionary>