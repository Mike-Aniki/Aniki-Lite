<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:pbeh="clr-namespace:Playnite.Behaviors;assembly=Playnite"
                    xmlns:pin="clr-namespace:Playnite.Input;assembly=Playnite"
                    mc:Ignorable="d">


    <Style x:Key="TrophyWindowStyle" TargetType="ContentControl">
        <Setter Property="Margin" Value="0,80,60,80" />
        <Setter Property="Grid.RowSpan" Value="3" />
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Width" Value="750" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Grid.InputBindings>
                            <pin:GameControllerInputBinding x:Name="CloseTroph" Button="B" Command="{Binding Content.Toggle, ElementName=ThemeOptions_Command}"	CommandParameter="{Binding ElementName=BackButton}" />
                            <KeyBinding Key="Esc" x:Name="CloseKeyCloseTroph" Command="{Binding Content.Toggle, ElementName=ThemeOptions_Command}"	CommandParameter="{Binding ElementName=BackButton}" />
                        </Grid.InputBindings>

                       

                        <Border Background="{DynamicResource TrophyBackgroundBrush}" Opacity="0.95" CornerRadius="5"  Visibility="Visible">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
											  Direction="315"
											  ShadowDepth="5"
											  Opacity="0.5"
											  BlurRadius="10"/>
                            </Border.Effect>

                            <Grid x:Name="AchievementList" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750" Height="850" KeyboardNavigation.DirectionalNavigation="Cycle" pbeh:FocusBahaviors.FocusBinding="True" >
                                
                                <Grid HorizontalAlignment="Stretch" Width="700" VerticalAlignment="Top" Margin="0,-25,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <CheckBoxEx x:Name="BackButton"  Grid.Column="0" Margin="0,0,0,0"
                                                Style="{DynamicResource SuccessButtonBack}"
                                                IsChecked="{Binding IsChecked, ElementName=SuccessButton, Mode=TwoWay}"
                                                pbeh:FocusBahaviors.OnVisibilityFocus="True"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center" />

                                   

                                    <ToggleButtonEx x:Name="SortButton"
                                                    Grid.Column="1" Margin="0,5,0,0"
                                                    Style="{StaticResource SuccessSortButton}"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center" />
                                </Grid>

                                <Grid  HorizontalAlignment="Stretch" Width="750" VerticalAlignment="Top" Margin="0,-20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButtonEx x:Name="SuccessChangeToggle"
                                                        Grid.Column="1"
                                                        Style="{StaticResource SuccessChangeButton}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        IsChecked="False" />
                                </Grid>


                                <Rectangle Fill="{DynamicResource TextBrush}" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,50,0,0" />
                                <Border Background="{DynamicResource ButtonBrushBackground}" CornerRadius="0,0,5,5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="50" Margin="0,0,0,-50"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-50" >
                                    <TextBlock Text="{DynamicResource LocTotalTrophiesUnlocked}"
													   Style="{DynamicResource TextBlockBaseStyle}"
													   FontSize="22"
													   Margin="0,50,5,10" />

                                    <TextBlock Text=" : "
													   Style="{DynamicResource TextBlockBaseStyle}"
													   FontSize="22"
													   Margin="0,50,5,10" />


                                    <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}"
													   Style="{DynamicResource TextBlockBaseStyle}"
													   FontSize="22"
													   Margin="0,50,0,10" />
                                    <TextBlock Text="/"
													   Style="{DynamicResource TextBlockBaseStyle}"
													   FontSize="22"
													   Margin="2,50,2,10" />
                                    <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}"
													   Style="{DynamicResource TextBlockBaseStyle}"
													   FontSize="22"
													   Margin="0,50,0,10" />
                                </StackPanel>

                                <ListView x:Name="AchievementListDesc" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="Auto" ScrollViewer.CanContentScroll="True" Margin="10,60,0,10" 
																		  VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"  BorderBrush="Transparent" BorderThickness="0" Background="Transparent"
																		  FocusVisualStyle="{x:Null}" Focusable="False" KeyboardNavigation.DirectionalNavigation="Local" ItemsSource="{PluginSettings Plugin=SuccessStory, Path=ListAchUnlockDateDesc}">
                                    <ListView.Style>
                                        <Style TargetType="ListView">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=SortButton, Path=IsChecked}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=SortButton, Path=IsChecked}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.Style>
                                    
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Focusable" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border BorderBrush="Transparent" CornerRadius="5">
                                                            <Grid  Width="650" Height="110" Margin="5,10,5,10" >
                                                                <Border x:Name="mask" CornerRadius="5" Background="{DynamicResource TrophyBackgroundNoFocusBrush}"/>
                                                                <Grid>
                                                                    <Grid.OpacityMask>
                                                                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                                                                    </Grid.OpacityMask>
                                                                    <Image x:Name="BronzeFond" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Bronze.png'}" Height="50" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <Image x:Name="ArgentFond" Visibility="Collapsed" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Argent.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <Image x:Name="OrFond" Visibility="Collapsed"  Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center"
																		   Source="{ThemeFile 'Images/Or.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" />
                                                                    <Image x:Name="SaphirFond" Visibility="Collapsed" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Saphir.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                                        <StackPanel Margin="10,0,0,0" Orientation="Horizontal" >
                                                                            <Image Margin="0,0,0,0" Source="{Binding Icon}" Height="80" Width="80" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="650" Height="120">
                                                                        <StackPanel Orientation="Vertical">
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <Image x:Name="Bronze" Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Bronze.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Visible"/>
                                                                                <Image x:Name="Argent"  Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Argent.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed" />
                                                                                <Image x:Name="Or"  Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Or.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed"/>
                                                                                <Image x:Name="Saphir" Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Saphir.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed"/>

                                                                                <TextBlock x:Name="Name" Margin="0,20,0,10" Text="{Binding Name}" VerticalAlignment="Top"  HorizontalAlignment="Left" MaxWidth="650" TextWrapping="Wrap" FontSize="25" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            </StackPanel>
                                                                            <TextBlock Margin="100,-10,10,0" Height="100" MaxWidth="500" Text="{Binding Description}" Opacity="0.8"  TextWrapping="Wrap" VerticalAlignment="Top"  HorizontalAlignment="Left" FontSize="19" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                        </StackPanel>
                                                                        <StackPanel Margin="510,10,0,0" Orientation="Vertical" VerticalAlignment="Bottom">
                                                                            <TextBlock x:Name="Clock1" Visibility="Visible" Margin="0,0,3,0" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding DateUnlocked, StringFormat='{}{0:HH:mm}'}" FontSize="16" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            <TextBlock x:Name="Clock2" Visibility="Collapsed" Margin="0,0,3,0" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding DateUnlocked, StringFormat='{}{0:t}'}" FontSize="16" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            <TextBlock  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,3,2" Text="{Binding DateUnlocked, StringFormat='{}{0:d MMM yyyy}'}" FontSize="14" Style="{DynamicResource TextBlockBaseStyle}"/>

                                                                        </StackPanel>
                                                                        <TextBlock x:Name="PercentLogic" Text="{Binding GamerScore}" Visibility="Collapsed"/>
                                                                    </Grid>
                                                                </Grid>

                                                                <Border x:Name="MainBorder" Opacity="1" BorderThickness="3" CornerRadius="5" Margin="-1" BorderBrush="{DynamicResource ColorBorderBrush}" Visibility="Hidden" Tag="False">
                                                                    <Border.CacheMode>
                                                                        <BitmapCache EnableClearType="False"
											                                RenderAtScale="1"
											                                SnapsToDevicePixels="False"/>
                                                                    </Border.CacheMode>
                                                                </Border>
                                                            </Grid>
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" TargetName="MainBorder" />
                                                                <Setter Property="Tag" Value="True" TargetName="MainBorder" />
                                                                <Setter Property="Foreground" Value="{DynamicResource TextFocusColorBrush}" TargetName="Name" />
                                                                <Setter Property="Background" Value="{DynamicResource TrophyBackgroundFocusBrush}" TargetName="mask" />
                                                            </Trigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="180"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="90"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="30"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="True"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="{x:Null}"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="False"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="False"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[LocalClock]}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Clock2" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Clock1" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>

                                <ListView x:Name="AchievementListAsc" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="Auto" ScrollViewer.CanContentScroll="True" Margin="10,60,0,10"
																		  VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"  BorderBrush="Transparent" BorderThickness="0" Background="Transparent"
																		  FocusVisualStyle="{x:Null}" Focusable="False" KeyboardNavigation.DirectionalNavigation="Local" ItemsSource="{PluginSettings Plugin=SuccessStory, Path=ListAchUnlockDateAsc}">
                                    <ListView.Style>
                                        <Style TargetType="ListView">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=SortButton, Path=IsChecked}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=SortButton, Path=IsChecked}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.Style>
                                    
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Focusable" Value="True"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border BorderBrush="Transparent" CornerRadius="5">
                                                            <Grid  Width="650" Height="110" Margin="5,10,5,10" >
                                                                <Border x:Name="mask" CornerRadius="5" Background="{DynamicResource TrophyBackgroundNoFocusBrush}"/>
                                                                <Grid>
                                                                    <Grid.OpacityMask>
                                                                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                                                                    </Grid.OpacityMask>
                                                                    <Image x:Name="BronzeFond" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Bronze.png'}" Height="50" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <Image x:Name="ArgentFond" Visibility="Collapsed" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Argent.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <Image x:Name="OrFond" Visibility="Collapsed"  Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center"
																		   Source="{ThemeFile 'Images/Or.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" />
                                                                    <Image x:Name="SaphirFond" Visibility="Collapsed" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Stretch="UniformToFill"
																		   Source="{ThemeFile 'Images/Saphir.png'}" Height="110" RenderOptions.BitmapScalingMode="Fant" />
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                                        <StackPanel Margin="10,0,0,0" Orientation="Horizontal" >
                                                                            <Image Margin="0,0,0,0" Source="{Binding Icon}" Height="80" Width="80" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="650" Height="120">
                                                                        <StackPanel Orientation="Vertical">
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <Image x:Name="Bronze" Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Bronze.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Visible"/>
                                                                                <Image x:Name="Argent"  Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Argent.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed" />
                                                                                <Image x:Name="Or"  Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Or.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed"/>
                                                                                <Image x:Name="Saphir" Margin="100,10,5,0" VerticalAlignment="Center" HorizontalAlignment="Left"
																		   Source="{ThemeFile 'Images/Saphir.png'}" Height="25" RenderOptions.BitmapScalingMode="Fant" Visibility="Collapsed"/>

                                                                                <TextBlock x:Name="Name" Margin="0,20,0,10" Text="{Binding Name}" VerticalAlignment="Top"  HorizontalAlignment="Left" MaxWidth="650" TextWrapping="Wrap" FontSize="25" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            </StackPanel>
                                                                            <TextBlock Margin="100,-10,10,0" Height="100" MaxWidth="500" Text="{Binding Description}" Opacity="0.8"  TextWrapping="Wrap" VerticalAlignment="Top"  HorizontalAlignment="Left" FontSize="19" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                        </StackPanel>
                                                                        <StackPanel Margin="510,10,0,0" Orientation="Vertical" VerticalAlignment="Bottom">
                                                                            <TextBlock x:Name="Clock1" Visibility="Visible" Margin="0,0,3,0" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding DateUnlocked, StringFormat='{}{0:HH:mm}'}" FontSize="16" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            <TextBlock x:Name="Clock2" Visibility="Collapsed" Margin="0,0,3,0" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding DateUnlocked, StringFormat='{}{0:t}'}" FontSize="16" Style="{DynamicResource TextBlockBaseStyle}" />
                                                                            <TextBlock  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,3,2" Text="{Binding DateUnlocked, StringFormat='{}{0:d MMM yyyy}'}" FontSize="14" Style="{DynamicResource TextBlockBaseStyle}"/>

                                                                        </StackPanel>
                                                                        <TextBlock x:Name="PercentLogic" Text="{Binding GamerScore}" Visibility="Collapsed"/>
                                                                    </Grid>
                                                                </Grid>

                                                                <Border x:Name="MainBorder" Opacity="1" BorderThickness="3" CornerRadius="5" Margin="-1" BorderBrush="{DynamicResource ColorBorderBrush}" Visibility="Hidden" Tag="False">
                                                                    <Border.CacheMode>
                                                                        <BitmapCache EnableClearType="False"
											                                RenderAtScale="1"
											                                SnapsToDevicePixels="False"/>
                                                                    </Border.CacheMode>
                                                                </Border>
                                                            </Grid>
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" TargetName="MainBorder" />
                                                                <Setter Property="Tag" Value="True" TargetName="MainBorder" />
                                                                <Setter Property="Foreground" Value="{DynamicResource TextFocusColorBrush}" TargetName="Name" />
                                                                <Setter Property="Background" Value="{DynamicResource TrophyBackgroundFocusBrush}" TargetName="mask" />
                                                            </Trigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="180"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="90"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=PercentLogic, Path=Text}" Value="30"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Saphir" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Or" Property="Visibility" Value="Collapsed"/>
                                                                    <Setter TargetName="Argent" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Bronze" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="True"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="{x:Null}"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="False"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding ElementName=SuccessChangeToggle, Path=IsChecked}" Value="False"/>
                                                                    <Condition Binding="{Binding IsUnlock}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[LocalClock]}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.Setters>
                                                                    <Setter TargetName="Clock2" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="Clock1" Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger.Setters>
                                                            </MultiDataTrigger>

                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
