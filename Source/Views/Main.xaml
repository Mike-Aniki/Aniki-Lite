                               VerticalAlignment="Top"
                               Margin="100,20,0,0"
                                        Width="120"
                                        Height="120">

                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Setter Property="Background" Value="{DynamicResource Avatar1}" />
